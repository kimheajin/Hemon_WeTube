extends layouts/main

block content
    .form-container
        form(action=`/videos${routes.upload}`, method="post")
            label(for="videofile") Video File
            input(type="file", id="File", name="videofile", required=true)
            input(type="text" placeholder="Title", name="title",required=true)
            input(placeholder="Description", name="description",required=true)
            input(type="submit", value="Update Video")